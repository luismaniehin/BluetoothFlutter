<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    app:cardCornerRadius="@dimen/cardviewRadius"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin">

        <ImageView
            android:id="@+id/ivItemSpeakerImage"
            android:layout_width="@dimen/heightImage100"
            android:layout_height="@dimen/heightImage100"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvItemSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/name_speaker"
            android:textStyle="bold"
            android:textSize="@dimen/sizeTitulo"
            android:textColor="@color/colorPrimaryDark2"/>

        <TextView
            android:id="@+id/tvItemSpeakerWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin"
            android:text="@string/work_speaker"
            android:textSize="@dimen/sizeSubTitulo"
            android:textColor="@color/colorAccent2"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>